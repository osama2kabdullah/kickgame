{%- if section.blocks.size > 0 -%}
  <div class="{% unless section.settings.remove_top_margin %} container--vertical-space {% endunless %} {% if section.settings.remove_bottom_margin %} container--negative-margin {% endif %}">
    <style type="text/css">
      #element-{{ section.id }} {
        --animation-speed: {{ section.settings.speed }}s;
        {% if section.settings.color_background_main != 'rgba(0,0,0,0)' %}
          background: {{ section.settings.color_background_main }};
        {% endif %}
      }
      {% if section.settings.color_text_main != 'rgba(0,0,0,0)' %}
        #element-{{ section.id }}, #element-{{ section.id }} a {
          color: {{ section.settings.color_text_main }};
        }
      {% endif %}
    </style>

    {{ 'custom-marquee.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'custom-marquee.js' | asset_url }}" defer></script>

    <scrolling-text
      id="element-{{ section.id }}"
      class="scrolling-text {{ section.settings.text_size }}"
      data-scrolling-speed="{{ section.settings.speed }}"
      data-scrolling-direction="{{ section.settings.scroll_direction }}"
      data-pause-on-hover="{{ section.settings.pause_on_hover }}"
      dir="{{ section.settings.scroll_direction }}"
    >
      <div>
        {%- liquid
          for block in section.blocks
            if section.settings.devide_style == 'none'
              echo '<span class="element--horizontal-space--' | append: section.settings.horizontal_space | append: '">' | append: block.settings.marquee_text | append: '</span>'
            else
              echo '<span class="element--horizontal-space--' | append: section.settings.horizontal_space | append: '">' | append: block.settings.marquee_text | append: '</span> <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-dot" viewBox="0 0 16 16"> <path d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3"/> </svg>'
            endif
          endfor
        -%}
      </div>
    </scrolling-text>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Scrolling",
  "class": "mount-scrolling-text",
  "settings": [
    {
      "id": "scroll_direction",
      "type": "select",
      "options": [
        {
          "value": "rtl",
          "label": "Direction right"
        },
        {
          "value": "ltr",
          "label": "Direction left"
        }
      ],
      "default": "ltr",
      "label": "Direction left"
    },
    {
      "id": "devide_style",
      "type": "select",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "dot",
          "label": "Dot"
        }
      ],
      "default": "dot",
      "label": "Devide style"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Speed",
      "min": 20,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "select",
      "id": "horizontal_space",
      "label": "Horizontal Space",
      "options": [
        {
          "value": "regular-x-2",
          "label": "Regular"
        },
        {
          "value": "large-x-2",
          "label": "Large"
        },
        {
          "value": "xlarge-x-2",
          "label": "Exta-large"
        }
      ],
      "default": "regular-x-2"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        {
          "value": "text-size--small",
          "label": "Small"
        },
        {
          "value": "text-size--large",
          "label": "large"
        },
        {
          "value": "text-size--xlarge",
          "label": "Extra large"
        }
      ],
      "default": "text-size--xlarge"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "color",
      "id": "color_background_main",
      "label": "Background color",
      "default": "#e9e9e9"
    },
    {
      "type": "color",
      "id": "color_text_main",
      "label": "Text Color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "checkbox",
      "id": "remove_top_margin",
      "label": "Remove top margin",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_bottom_margin",
      "label": "Remove bottom margin",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Scroll item",
      "settings": [
        {
          "type": "header",
          "content": "Heading..."
        },
        {
          "type": "inline_richtext",
          "id": "marquee_text",
          "label": "Scroll item text",
          "default": "Introduce product <strong>promotions</strong>. Write about your brand. Flash deals!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling",
      "blocks": [{ "type": "text" }]
    }
  ]
}
{% endschema %}
